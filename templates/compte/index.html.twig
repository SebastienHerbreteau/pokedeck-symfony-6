{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}
	<div class="modal"></div>

	{% if app.user %}
		<div class="container-info">
			<div class="info">
				<h1 class="title-info">Information du compte</h1>
				<p>Prénom :
					{{app.user.firstname}}</p>
				<p>Nom :
					{{app.user.lastname}}</p>
				<p>Email :
					{{app.user.email}}</p>
			</div>
		</div>
	{% endif %}

	<h1 class="title-team">Mon équipe Pokémon</h1>
	<div class="container-cards-compte">
	<!-- Pour chaque pokemon contenu dans Pokemons -->
		{% for pokemon in pokemons %}
	<!-- Si l'utilisateur est connecté -->
			{% if app.user %}
	<!-- Pour chaque pokemon en lien avec la table favoris -->			
				{% for favoris in pokemon.favoris %}
	<!-- Si l'ID de l'utilisateur est contenu dans le favoris -->	
					{% if app.user.id == favoris.id %}
	<!-- On affiche les résultats-->				
						<div class="card" style="background-image: url('{{pokemon.background}}')">
							<h3 class="idpoke">{{pokemon.id}}</h3>
							<img class="imgPoke" src="{{pokemon.imgPokemon}}" alt="image de {{pokemon.name}}">
							<h2 class="name">{{pokemon.name}}</h2>
							<a href="{{ path('remove_favoris_from_account', {id: pokemon.id})}}">
								<img class="star" src="{{ asset('assets/img/other/yellow-star.png') }}" alt="pictogramme d'une étoile jaune">
							</a>
						</div>
					{% endif %}
				{% endfor %}	
			{% endif %}
		{% endfor %}
	</div>
{% endblock %}

